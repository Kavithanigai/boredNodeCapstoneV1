<!-- SignUp Section -->
     <section id="register-page">
        <div class="row reg-box" >
        <i class="icon ion-md-person avatarLogo"></i>
       <form id="register-form" class="login-register-form" action="/users/register" method="post">
         <h2>SignUp Form</h2>
             <div class="form-group">
                <label for="name" class="form-label">Name</label><br>
                <input type="text" name="name" class="form-control" placeholder="Enter Username" value="{{name}}" required>
              </div>
              <div class="form-group">
              <label for="email" class="form-label">Email</label><br>
              <input type="email" name="email" class="form-control" placeholder="Enter UserEmail" value="{{email}}" required>
             </div>
              <div class="form-group">
                <label for="password" class="form-label">Password</label><br>
                <input type="password" name="password" class="form-control" placeholder="Enter Password" value="{{password}}" required>
              </div>
              <div class="form-group">
                <label for="password2" class="form-label">Confirm Password</label><br>
                <input type="password" name="password2" class="form-control" placeholder="Confirm Password" value="{{password2}}" required>
              </div>
              <button type="submit" class="btn btn-primary regBtn">Submit</button>
              <p class="loginPar">Already have an account? <a href="/users/login"  class="login-trigger link loginLink">Login here!</a></p>
        </form>
      </div>
    </section>
